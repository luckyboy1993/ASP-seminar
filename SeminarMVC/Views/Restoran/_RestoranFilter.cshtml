﻿﻿@model SeminarMVC.Models.RestoranFilterModel
<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Index")" method="post" class="form-inline restorans-filter">
            <div class="form-group">
                @Html.EditorFor(p => p.Ime, new { htmlAttributes = new { @class = "form-control", placeholder = "Pretraga po nazivu" } })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(p => p.Adresa, new { @class = "form-control", placeholder = "Pretraga po adresi" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(p => p.Zvez, new { @class = "form-control", placeholder = "Pretraga po zvijezdicama" })
               </div>
                <div class="form-group">
                    @Html.TextBoxFor(p => p.CityName, new { @class = "form-control", placeholder = "Pretraga po gradu" })
                </div>
                <button type="button" id="gumb" class="btn btn-default submit-button">Pretraga</button>
</form>
    </div>
</div>
